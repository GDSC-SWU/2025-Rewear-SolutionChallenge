<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="300dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/clothesImages"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:scaleType="center"
                android:src="@drawable/cloth_example" />

            <LinearLayout
                android:id="@+id/likeContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/heartIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/ic_heart"
                    app:tint="@color/heart" />

                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="5"
                    android:textColor="@color/sub_black"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/clothesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/clothes_label_bg"
            android:backgroundTint="@color/tops_bg"
            android:fontFamily="@font/pretendard_medium"
            android:paddingHorizontal="10dp"
            android:text="Tops"
            android:textColor="@color/tops_name"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/clothesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/pretendard_semibold"
            android:paddingStart="5dp"
            android:text="Letter Open Hoodie"
            android:textColor="@color/grayblack"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/clothesLocation"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text="Mapo-dong"
                android:textColor="@color/gray2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/clothesAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium"
                android:text=" Â· 1m ago"
                android:textColor="@color/gray2"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>