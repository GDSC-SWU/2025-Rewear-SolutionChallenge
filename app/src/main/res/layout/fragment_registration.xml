<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/BtnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_clear"
            app:tint="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:paddingStart="100dp"
            android:paddingTop="30dp"
            android:text="@string/add_item"
            android:textColor="@color/sub_black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="30dp"
            android:paddingEnd="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/galleryView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gallery_photo" />

                <ImageView
                    android:id="@+id/aiBubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="58dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ai_bubble"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/imageCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_medium"
                    android:paddingStart="40dp"
                    android:paddingTop="70dp"
                    android:text="0/5"
                    android:textColor="@color/gray2"
                    android:textSize="12sp" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/galleryRecyclerView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/title"
            android:textColor="@color/sub_black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/required"
            android:textColor="@color/required"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="13dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rounded_search_bar"
        android:backgroundTint="@color/lightgray_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <EditText
            android:id="@+id/titleEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/pretendard_semibold"
            android:hint="@string/title"
            android:inputType="text"
            android:paddingStart="8dp"
            android:textColor="@color/grayblack"
            android:textColorHint="@color/lightgray_text"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/category"
            android:textColor="@color/sub_black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="@string/required"
            android:textColor="@color/required"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="13dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/category_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/categoryEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/pretendard_medium"
            android:hint="@string/category"
            android:paddingStart="8dp"
            android:textColorHint="@color/sub_black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/category_ic"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:paddingStart="4dp"
            android:rotation="-90"
            android:src="@drawable/ic_arrow_down"
            app:tint="@color/arrow_gray" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/description"
        android:textColor="@color/sub_black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginHorizontal="13dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rounded_search_bar"
        android:backgroundTint="@color/lightgray_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="top"
            android:hint="@string/description_hint"
            android:inputType="textMultiLine"
            android:paddingStart="8dp"
            android:paddingTop="12dp"
            android:textColor="@color/sub_black"
            android:textColorHint="@color/lightgray_text"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="@string/swap_method"
        android:textColor="@color/sub_black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/inPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/swap_method"
            android:fontFamily="@font/pretendard_regular"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="@string/in_person_trade"
            android:textColor="@color/sub_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/swap_method"
            android:clickable="false"
            android:fontFamily="@font/pretendard_regular"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="@string/shipping_trade"
            android:textColor="@color/sub_black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/swapAddLocation"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/rounded_search_bar"
            android:backgroundTint="@color/lightgray_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/swapLocationText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/pretendard_medium"
                android:hint="@string/add_location"
                android:inputType="text"
                android:paddingStart="8dp"
                android:textColor="@color/grayblack"
                android:textColorHint="@color/lightgray_text"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/swapLocationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_swap_location" />
    </LinearLayout>

</LinearLayout>