<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/BtnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/process"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/process1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BtnBack" />

    <LinearLayout
        android:id="@+id/process_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/process">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="1"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/process" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="/"
            android:textColor="@color/sub_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="3"
            android:textColor="@color/process_number"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/reform_items_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="@string/choose_reform_items"
        android:textColor="@color/sub_black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/process_number" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reform_items_header"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reform_item1"
            android:layout_width="328dp"
            android:layout_height="85dp"
            android:backgroundTint="@color/lightgray_bar"
            android:elevation="2dp"
            android:fontFamily="@font/pretendard_medium"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/sub_black"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:maxLines="2"
            android:ellipsize="none"
            android:lineSpacingExtra="4dp"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reform_item2"
            android:layout_width="328dp"
            android:layout_height="85dp"
            android:textAlignment="textStart"
            android:backgroundTint="@color/lightgray_bar"
            android:elevation="2dp"
            android:fontFamily="@font/pretendard_medium"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/sub_black"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="none"
            android:lineSpacingExtra="4dp"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reform_item3"
            android:layout_width="328dp"
            android:layout_height="85dp"
            android:textAlignment="textStart"
            android:backgroundTint="@color/lightgray_bar"
            android:elevation="2dp"
            android:fontFamily="@font/pretendard_medium"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/sub_black"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="none"
            android:lineSpacingExtra="4dp"

            />


    </com.google.android.material.button.MaterialButtonToggleGroup>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/register_button_blue"
        android:fontFamily="@font/pretendard_bold"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>